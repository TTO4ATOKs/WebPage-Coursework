@model WebPage_Coursework.Models.OrderViewModel

<div style="margin-top:100px;">
    @if (true)
    {
        decimal total = 0;
        <div class="container order-details-container">
            <h2 class="order-details-title">Детали заказа № @Model.Id</h2>

            <!-- Информация о заказе -->
            <div class="order-info">
                <p><strong>Имя клиента:</strong> <span>@Model.CustomerName</span></p>
                <p><strong>Телефон:</strong> <span>@Model.Phone</span></p>
                <p><strong>Адрес:</strong> <span>@Model.Address</span></p>
                <p><strong>Дата заказа:</strong> <span>@Model.OrderDate.ToString("dd.MM.yyyy")</span></p>
            </div>

            <!-- Товары в заказе -->
            <h3 class="order-products-title">Товары в заказе</h3>

            <div class="table-responsive">
                <table class="table order-details-table">
                    <thead>
                        <tr>
                            <th>Название товара</th>
                            <th>Количество</th>
                            <th>Стоимость</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderItems)
                        {
                            <tr>
                                <td>@item.ProductName</td>
                                <td>@item.Quantity</td>
                                <td>@(item.Price * item.Quantity)р.</td>
                            </tr>
                            total += (item.Price * item.Quantity);
                        }
                    </tbody>
                </table>
            </div>
            <div class="d-flex align-items-center justify-content-between my-5">
                <div class="text-start">
                    <div style="color: #28d1c2; font-size: 25px;">ИТОГО: <span class="text-white">@(total)р.</span></div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    body {
        background-image: url(/Images/background-admin.png); /* Путь к вашей картинке */
        background-repeat: repeat-y; /* Повторение только по вертикали */
        background-size: 100% auto; /* Масштабирование по ширине (100%), а высота подстраивается автоматически */
        background-attachment: local; /* Фиксированный фон, который не прокручивается с содержимым */
        background-position: top center; /* Центровка изображения по горизонтали */
    }

    /* Основной контейнер */
    .order-details-container {
        margin-top: 20px;
        padding: 20px;
        background-color: #161616; /* Тёмный фон */
        border-radius: 10px;
        border: 2px solid #28d1c2;
        box-shadow: rgba(40, 209, 194, 0.8) 0px 9px 7px -6px;
    }

    /* Заголовок страницы */
    .order-details-title {
        color: #28d1c2;
        font-size: 24px;
        text-transform: uppercase;
        margin-bottom: 20px;
        text-align: center;
    }

    /* Блок с информацией о заказе */
    .order-info p {
        color: #fff;
        font-size: 18px;
        margin: 5px 0;
    }

        .order-info p strong {
            color: #28d1c2;
            font-weight: bold;
        }

    .order-info span {
        color: #fff;
    }

    /* Заголовок для таблицы товаров */
    .order-products-title {
        color: #28d1c2;
        font-size: 20px;
        margin-top: 30px;
        text-transform: uppercase;
        text-align: center;
    }

    /* Таблица с товарами */
    .order-details-table {
        width: 100%;
        color: #fff;
        border-collapse: separate;
        border-spacing: 0 10px; /* Отступы между строками */
    }

        .order-details-table th {
            background-color: #161616;
            color: #28d1c2;
            padding: 10px;
            text-transform: uppercase;
            border-bottom: 2px solid #28d1c2;
            text-align: center;
        }

        .order-details-table td {
            background-color: #202020; /* Более светлый оттенок */
            color: #fff;
            padding: 15px;
            text-align: center;
            border-bottom: 1px solid #28d1c2;
        }
</style>